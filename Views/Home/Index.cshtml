@{
    ViewData["Title"] = "Strona główna";
}

<div class="text-center">
    <h1 class="display-4">Witaj w BeFit!</h1>
    <p>Aplikacja do zarządzania treningami i śledzenia postępów.</p>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <p>Zalogowany jako: <strong>@User.Identity.Name</strong></p>
        <div class="mt-4">
            <a asp-controller="TrainingSessions" asp-action="Create" class="btn btn-primary btn-lg me-2">Dodaj sesję treningową</a>
            <a asp-controller="Statistics" asp-action="Index" class="btn btn-info btn-lg">Zobacz statystyki</a>
        </div>
    }
    else
    {
        <p>Zaloguj się, aby rozpocząć korzystanie z aplikacji.</p>
    }
</div>
