@model BeFit.Models.ExerciseExecution

@{
    ViewData["Title"] = "Edytuj wykonane ćwiczenie";
}

<h1>Edytuj wykonane ćwiczenie</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="TrainingSessionId" class="control-label"></label>
                <select asp-for="TrainingSessionId" class="form-control" asp-items="ViewBag.TrainingSessionId"></select>
                <span asp-validation-for="TrainingSessionId" class="text-danger"></span>
                <small class="form-text text-muted">Wybierz sesję treningową, podczas której wykonano ćwiczenie</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ExerciseTypeId" class="control-label"></label>
                <select asp-for="ExerciseTypeId" class="form-control" asp-items="ViewBag.ExerciseTypeId"></select>
                <span asp-validation-for="ExerciseTypeId" class="text-danger"></span>
                <small class="form-text text-muted">Wybierz typ wykonywanego ćwiczenia</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" type="number" step="0.01" min="0.01" max="1000" />
                <span asp-validation-for="Weight" class="text-danger"></span>
                <small class="form-text text-muted">Obciążenie w kilogramach (0.01 - 1000 kg)</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NumberOfSets" class="control-label"></label>
                <input asp-for="NumberOfSets" class="form-control" type="number" min="1" max="100" />
                <span asp-validation-for="NumberOfSets" class="text-danger"></span>
                <small class="form-text text-muted">Liczba serii (1 - 100)</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RepetitionsPerSet" class="control-label"></label>
                <input asp-for="RepetitionsPerSet" class="form-control" type="number" min="1" max="1000" />
                <span asp-validation-for="RepetitionsPerSet" class="text-danger"></span>
                <small class="form-text text-muted">Liczba powtórzeń w każdej serii (1 - 1000)</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
                <small class="form-text text-muted">Opcjonalne uwagi dotyczące ćwiczenia</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

