@model BeFit.Models.ExerciseExecution

@{
    ViewData["Title"] = "Szczegóły wykonanego ćwiczenia";
}

<h1>Szczegóły wykonanego ćwiczenia</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExerciseType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExerciseType!.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingSession)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrainingSession!.StartDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Weight) kg
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfSets)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfSets)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RepetitionsPerSet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RepetitionsPerSet)
        </dd>
        <dt class = "col-sm-2">
            Łączne powtórzenia
        </dt>
        <dd class = "col-sm-10">
            @(Model.NumberOfSets * Model.RepetitionsPerSet)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>

