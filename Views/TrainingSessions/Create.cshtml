@model BeFit.Models.TrainingSession

@{
    ViewData["Title"] = "Dodaj nową sesję treningową";
}

<h1>Dodaj nową sesję treningową</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <small class="form-text text-muted">Nazwa sesji treningowej (np. "Trening siłowy - góra ciała")</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StartDateTime" class="control-label"></label>
                <input asp-for="StartDateTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
                <small class="form-text text-muted">Data i czas rozpoczęcia treningu</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EndDateTime" class="control-label"></label>
                <input asp-for="EndDateTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="EndDateTime" class="text-danger"></span>
                <small class="form-text text-muted">Data i czas zakończenia treningu</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
                <small class="form-text text-muted">Opcjonalne uwagi dotyczące sesji</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

