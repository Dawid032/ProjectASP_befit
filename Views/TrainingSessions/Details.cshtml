@model BeFit.Models.TrainingSession

@{
    ViewData["Title"] = "Szczegóły sesji treningowej";
}

<h1>Szczegóły sesji treningowej</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            <strong>@Html.DisplayFor(model => model.Name)</strong>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDateTime)
        </dd>
        <dt class = "col-sm-2">
            Czas trwania
        </dt>
        <dd class = "col-sm-10">
            @((Model.EndDateTime - Model.StartDateTime).ToString(@"hh\:mm\:ss"))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
</div>

@if (Model.ExerciseExecutions != null && Model.ExerciseExecutions.Any())
{
    <h3>Wykonane ćwiczenia</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Typ ćwiczenia</th>
                <th>Obciążenie (kg)</th>
                <th>Liczba serii</th>
                <th>Powtórzenia w serii</th>
                <th>Łączne powtórzenia</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exercise in Model.ExerciseExecutions)
            {
                <tr>
                    <td>@exercise.ExerciseType?.Name</td>
                    <td>@exercise.Weight</td>
                    <td>@exercise.NumberOfSets</td>
                    <td>@exercise.RepetitionsPerSet</td>
                    <td>@(exercise.NumberOfSets * exercise.RepetitionsPerSet)</td>
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>

